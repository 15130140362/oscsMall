<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <View
        android:visibility="invisible"
        android:id="@+id/sort_list_line"
        android:background="@color/view_color"
        android:layout_width="@dimen/sort_list_line_width"
        android:layout_height="match_parent"/>
   <android.support.v7.widget.AppCompatTextView
       android:id="@+id/sort_list_name"
       android:layout_alignLeft="@id/sort_list_line"
       android:gravity="center"
       android:textColor="@color/we_chat_black"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />
    <View
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@id/sort_list_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>